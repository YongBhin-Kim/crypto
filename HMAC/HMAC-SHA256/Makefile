# Makefile for
# 1. HMAC-SHA256

CC							= gcc
LDFLAGS						= -g -O2

HMAC_SHA256_TEST = hmac_sha256_test
SHA2_HEADERS = ../../HASH/SHA/SHA256/sha256.h 
SHA2_SOURCES = ../../HASH/SHA/SHA256/sha256.c 
HMAC_SHA256_HEADERS = hmac_sha256.h
HMAC_SHA256_SOURCES = hmac_sha256.c
HMAC_SHA256_TEST_SOURCES = hmac_sha256_test.c
# HASH_API_SOURCES = HASH_API.c
# HASH_API_HEADERS = HASH_API.h

all : clean $(HMAC_SHA256_TEST)

$(HMAC_SHA256_TEST):	$(HMAC_SHA256_TEST_SOURCES) $(SHA2_SOURCES) $(SHA2_HEADERS) $(HMAC_SHA256_SOURCES) $(HMAC_SHA256_HEADERS)
	$(CC) -o $@ $(HMAC_SHA256_TEST_SOURCES) $(SHA2_SOURCES) $(HMAC_SHA256_SOURCES) $(LDFLAGS)

run: clean hmac_sha256_test
	./hmac_sha256_test

clean:
	rm -rf $(HMAC_SHA256_TEST)

# EOF